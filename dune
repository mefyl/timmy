(dirs timmy timmy-clock timmy-jsoo timmy-unix .logistic)

(alias
 (name default)
 (deps
  timmy.opam
  timmy-jsoo.opam
  timmy-unix.opam
  (alias install)))

(rule
 (target dune.extdeps.inc)
 (alias extdeps)
 (mode (promote))
 (action
  (with-stdout-to
   %{target}
   (run
    %{dep:.logistic/dune/extdeps/extdeps.exe}
    generate
    --packages
    timmy,timmy-jsoo,timmy-unix
    --exclude
    schematic,schematic-jsoo))))

(include dune.extdeps.inc)
