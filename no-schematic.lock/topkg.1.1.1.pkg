(version 1.1.1)

(build
 (all_platforms
  ((action
    (run
     ocaml
     pkg/pkg.ml
     build
     --pkg-name
     %{pkg-self:name}
     --dev-pkg
     %{pkg-self:dev})))))

(depends
 (all_platforms
  (ocaml ocamlfind ocamlbuild)))

