(version 3.20.1)

(build
 (progn
  (when
   %{pkg-self:dev}
   (run dune subst))
  (run rm -rf vendor/csexp)
  (run rm -rf vendor/pp)
  (run dune build -p %{pkg-self:name} -j %{jobs} @install)))

(depends dune ocaml base-unix csexp)

(source
 (fetch
  (url
   https://github.com/ocaml/dune/releases/download/3.20.1/dune-3.20.1.tbz)
